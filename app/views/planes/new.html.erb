
<div class="container">
    <div class="row">
      <div class="col-sm-9 offset-sm-2 ">
        <div class="form-login">
          <h1>Add a new plane</h1>
          <%= simple_form_for @plane do |f| %>
            <%= f.input :name %>
            <%= f.input :description %>
            <%= f.input :price %>
            <%= f.input :address %>
            <%= f.input :photo, as: :file, label: "Add a photo" %>
            <div class="form-actions">
            <%= f.submit %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
</div>




