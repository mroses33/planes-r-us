<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Create a new booking</h1>

      <%= simple_form_for [@plane, @booking] do |f| %>
        <%= f.date_field :start_date %>
        <%= f.date_field :end_date %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
