  <%= link_to "Back", root_path %>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Bookings</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ref.N.</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Paid</th>
          </thead>

          <% @bookings.each do |booking| %>
            <tr>
              <td><%= booking.id %></td>
              <td><%= booking.start_date %></td>
              <td><%= booking.end_date %></td>
              <td><%= booking.price %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

