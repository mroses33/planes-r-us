<div class="container">
  <div class="row">
    <% @bookings.each do |booking| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card">
          <div class="card-description">
            <h2><%= booking.plane %></h2>
            <p><%= booking.start_date %></p>
            <p><%= booking.end_date %></p>
            <p><%= booking.start_date %></p>
            <p><%= booking.price %></p>

          </div>
          <%= link_to "", booking_path(booking), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
